@model EFormToBe.Pages.EFormModel
@{
    var html = ViewData["html"];
}


<body>
    Saved Data :: @Html.Raw(ViewData["SavedDetails"])
    <form id="form1" method="post">
        <div>
            Employee Details
            <br/>
            <br/>
            <label>Firstname </label>
            <input type="text" name="firstname" size="15" />
          @*  <input type="hidden" id="FirstName" />*@
            <br/>
            <br/>
            <label>Middlename: </label>
            <input type="text" name="middlename" size="15" />
           
            @Html.Hidden("MiddleName", ViewData["MiddleName"])
            <br/>
            <br/>
            <label>Lastname: </label>
            <input type="text" name="lastname" size="15" />
               @Html.Hidden("LastName", ViewData["LastName"])
           
            <br/>
            <br/>

 

            <br/>
            <br/>
            <label>
                Gender :  
            </label>
            <br/>
            <input type="radio" name="male" />
            Male
            <br/>
            <input type="radio" name="female" />
            Female
            <br/>
            <input type="radio" name="other" />
            Other  
            <br/>
            <br/>

            <label>
                Phone :  
            </label>
            <input type="text" name="country code" value="+91" size="2" />
            <input type="text" name="phone" size="10" />
            <br/>
            <br/>
            Address  
            <br/>
            <textarea cols="80" rows="5" value="address" >  </textarea>

            <br/>
            <br/>
             @Html.Raw(ViewData["html"])
            </div>
            
            <input type="submit" value="Submit" asp-page-handler="Submit"/>  
  
    </form>
</body>